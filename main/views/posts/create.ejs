<% include ../partials/head %> 
	<div class="container">
		<form method=post action="/blog/<%= userId %>/<%= blogName %>/createpost" class="form-horizontal" role="form">
            <input type="hidden" name="_csrf" value="<%= csrf %>">
			<h2 class="form-signin-heading">Create Post</h2>
                <div class="form-group">
                    <label for="select">Category</label>
                    <% if(categories.length !=0) { %>
                        <select multiple name="select" class="form-control" id="select">
                            <% for(let i=0; i<categories.length; i++) { %>
                                <option value="<%=categories[i]._id%>"><%=categories[i].title%></option>
                            <% } %>
                        </select>
                    <% } else { %>
                        You don't have any cateogry    
                    <%}%>    
                </div>

                <div class="form-group">
                    <label for="title" class="control-label col-sm-2">Title</label>
                    <div class="col-sm-10">
                        <input type="text" name="title" id="title" class="form-control" placeholder="Title" required autofocus>
                    </div>
                </div>

                <div class="form-group">
                    <label for="content" class="control-label col-sm-2">Content</label>
                    <div class="col-sm-10">
                        <textarea name="content" id="content" class="form-control" placeholder="Content"></textarea>
                    </div>
                </div>

			<button class="btn btn-lg btn-primary col-sm-offset-11 col-sm-1" type="submit">Submit</button>
		</form>
	</div> 
<% include ../partials/footer %>
