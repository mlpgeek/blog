<% include ../partials/head %> 
	<div class="container">
		<form method=post action="/blog/<%= userId %>/<%= blog.name %>/modify" class="form-horizontal">
            <input type="hidden" name="_csrf" value="<%= csrf %>">
			<h2 class="form-signin-heading">Modify Blog</h2>
                <div class="form-group">
                    <label for="inputName" class="control-label col-sm-2" >Blog Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="name" id="inputName" class="form-control" value="<%= blog.name %>" required autofocus>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputDescription" class="control-label col-sm-2">Description</label>
                    <div class="col-sm-10">
                        <textarea name="description" id="inputDescription" class="form-control"><%= blog.description %></textarea>
                    </div>
                </div>
			<button class="btn btn-lg btn-primary col-sm-offset-9 col-sm-1" type="submit">Submit</button>
			<a href="/blog/<%= userId %>/<%= blog.name %>" class="btn btn-lg btn-warning col-sm-1" type="submit" role="button">Cancel</a>
		</form>
		<form method=post action="/blog/<%= userId %>/<%= blog.name %>/remove">
            <input type="hidden" name="_csrf" value="<%= csrf %>">
			<button class="btn btn-lg btn-danger col-sm-1" type="submit">Remove</button>
        </form>
	</div> 
<% include ../partials/footer %>
