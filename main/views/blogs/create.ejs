<% include ../partials/head %> 
	<div class="container">
		<form method=post action="/blog/create" class="form-horizontal" role="form">
            <input type="hidden" name="_csrf" value="<%= csrf %>">
			<h2 class="form-signin-heading">Create Blog</h2>
                <div class="form-group">
                    <label for="inputName" class="control-label col-sm-2">Blog Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="name" id="inputName" class="form-control" placeholder="Blog Name" required autofocus>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputDescription" class="control-label col-sm-2">Description</label>
                    <div class="col-sm-10">
                        <textarea name="description" id="inputDescription" class="form-control" placeholder="Content"></textarea>
                    </div>
                </div>
			<button class="btn btn-lg btn-primary col-sm-offset-11 col-sm-1" type="submit">Submit</button>
		</form>
	</div> 
<% include ../partials/footer %>
